<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--커서 색상 설정-->
        <item name="colorControlNormal">#FFF</item>
        <item name="colorControlActivated">#FFF</item>
    </style>

    <style name="Theme.AppCompat.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBarFullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TransparentToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">#00000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <declare-styleable name="CircularProgressButton">
        <attr name="pb_selectorIdle" format="reference" />
        <attr name="pb_selectorComplete" format="reference" />
        <attr name="pb_selectorError" format="reference" />
        <attr name="pb_textComplete" format="string" />
        <attr name="pb_textIdle" format="string" />
        <attr name="pb_textError" format="string" />
        <attr name="pb_textProgress" format="string" />
        <attr name="pb_colorProgress" format="color" />
        <attr name="pb_colorIndicator" format="color" />
        <attr name="pb_colorIndicatorBackground" format="color" />
        <attr name="pb_iconError" format="reference" />
        <attr name="pb_iconComplete" format="reference" />
        <attr name="pb_cornerRadius" format="dimension" />
        <attr name="pb_paddingProgress" format="dimension" />
        <attr name="pb_isIndeterminate" format="boolean" />
        <attr name="pb_textColorAfterClick" format="color" />
        <attr name="pb_backgroundColorAfterClick" format="color" />
        <attr name="pb_selectorCancel" format="reference" />
        <attr name="pb_iconCancel" format="reference" />
        <attr name="pb_textCancel" format="string" />
        <attr name="pb_colorProgressCancelIcon" format="color" />
        <attr name="pb_colorCancelText" format="color" />
        <attr name="pb_colorCompleteText" format="color" />
        <attr name="pb_colorErrorText" format="color" />
    </declare-styleable>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
