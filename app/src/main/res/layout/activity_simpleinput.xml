<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFF"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    tools:ignore="RtlSymmetry">

    <TextView
        android:text="@string/todayheader"
        android:textColor="#616161"
        android:textSize="30sp"
        android:fontFamily="monospace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="5dp"
        android:id="@+id/today_header_text"
        android:layout_marginBottom="20dp"
        tools:ignore="RtlHardcoded" />


    <EditText
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/today_header_text"
        android:fontFamily="monospace"
        android:hint="@string/todaymsg"
        android:paddingLeft="5dp"
        android:background="#00000000"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:ems="10"
        android:id="@+id/today_simple_edit" />

    <Button
        android:text="@string/todaybtn"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:layout_below="@+id/today_simple_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/ripple_effect"
        android:id="@+id/today_submit_btn" />
</RelativeLayout>
