<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="328dp"
    android:layout_height="45dp"
    android:background="@color/real_white"
    android:layout_marginBottom="5dp">
    <TextView
        android:id="@+id/adp_completelist_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:text="공연 리허설 참석"
        android:textSize="16dp"
        android:textColor="@color/text_gray_333"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:id="@+id/adp_completelist_checked_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="06.07"
            android:textSize="14dp"
            android:textColor="@color/text_gray_666"/>
        <View
            android:id="@+id/adp_completelist_endline"
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:background="#000"
            android:visibility="gone"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/adp_completelist_selected_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/select_list_bg"
        android:visibility="gone"/>
</RelativeLayout>