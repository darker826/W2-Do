<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/adp_infodertodo_checkbox"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:button="@drawable/check_box_layout" />

        <TextView
            android:id="@+id/adp_infodertodo_content"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/adp_infodertodo_alarm_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/activity_detailinput_colorpicker_border"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/adp_infodertodo_invite_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/activity_detailinput_colorpicker_border"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/adp_infodertodo_memo_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/activity_detailinput_colorpicker_border"
            android:visibility="gone"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/adp_infodertodo_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5월 9일(금) 11:59 오후"/>
        <ImageView
            android:id="@+id/adp_infodertodo_location_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/activity_detailinput_colorpicker_border"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/adp_infodertodo_location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="웨스턴돔"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>