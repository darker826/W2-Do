<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/fragment_simpleinput_background_border"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/frag_simpletodo_header_text"
        android:text="@string/simpleTodoHeader"
        android:textColor="#4D4D4D"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="24dp"/>

    <EditText
        android:id="@+id/frag_simpleinput_edittext"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:background="@null"
        android:textCursorDrawable="@color/cursorColor"
        android:ems="140"
        android:hint="해야할 일을 입력해 주세요."
        android:inputType="text"
        android:textColor="#333333"
        android:textColorHint="#BFBFBF"
        android:textSize="14dp"/>

    <View
        android:layout_width="240dp"
        android:layout_height="1dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="-1dp"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/frag_simpleinput_cancel_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="113dp"
            android:layout_height="30dp"
            android:background="@drawable/dialog_cancel_btn"
            android:text="@string/todayCancelbtn"
            android:textColor="#999999"
            android:textSize="13dp" />

        <Button
            android:id="@+id/frag_simpleinput_submit_btn"
            android:layout_width="113dp"
            android:layout_height="30dp"
            android:background="@drawable/fragment_simpleinput_save_btn"
            android:layout_marginStart="14dp"
            android:text="@string/todaySavebtn"
            android:textColor="#0087FF"
            android:textSize="13dp" />
    </LinearLayout>
</LinearLayout>
