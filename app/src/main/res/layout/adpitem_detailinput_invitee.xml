<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="225dp"
    android:layout_height="25dp"
    android:orientation="vertical"
    android:background="@drawable/adpitem_detailinput_invitee_layout_bg"
    android:layout_marginBottom="9dp">
    <TextView
        android:id="@+id/adp_detailinput_invitee_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="6dp"
        android:background="@null"
        android:text="james29 gmail.com"
        android:textColor="@color/real_white"
        android:textSize="16dp"/>

    <ImageButton
        android:id="@+id/adp_detailinput_invitee_remove_btn"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/btn_invite_remove"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="6dp"/>

</RelativeLayout>