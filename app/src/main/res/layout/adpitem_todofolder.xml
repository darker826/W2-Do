<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="110dp"
    android:padding="1dp"
    android:background="#30FFFFFF">
    <RelativeLayout
        android:id="@+id/adp_todofolder_nomal_layout"
        android:layout_width="178dp"
        android:layout_height="108dp"
        android:background="#40000000"
        android:visibility="visible">

        <TextView
            android:id="@+id/adp_todofolder_name"
            android:text="TextView"
            android:textColor="#fff"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/adp_todofolder_count"
            android:text="5"
            android:textColor="#fff"
            android:textSize="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/adp_todofolder_longclick_layout"
        android:layout_width="178dp"
        android:layout_height="108dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:visibility="gone">
        <ImageButton
            android:id="@+id/adp_todofolder_delete_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/adp_todofolder_editname_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
</FrameLayout>
